<section id="contact">
  <div class="container">
  </div>
</section>


<div class="container" ng-controller="CtrlTranslate">
  <h3>Bookmarks</h3>
  <table class="table">
    <thead>
    <tr><th>message</th><th>language</th><th>result</th><th>action</th></tr>
    </thead>
    <tbody>
    <tr>
      <td><input class="form-control" ng-model=ObjMessage.message></td>
      <td><div class="form-group">
          <select ng-init="ObjMessage.language='select'" class="form-control"  ng-model="ObjMessage.language">
            <option value="select" style="display:none;">Select A Language</option>
            <option value="en-ru">English to Russian</option>
            <option value="en-ja">English to Japanese</option>
            <option value="en-zh">English to Chinese</option>
            <option value="en-he">English to Hebrew</option>
            <option value="en-es">English to Spanish</option>
            <option value="en-fr">English to French</option>
            <option value="en-de">English to German</option>
          </select>
        </div></td>
      <td><input class="form-control" placeholder="Translation" ng-model=ObjMessage.result></td>
      <td><button class="btn btn-danger" ng-click="onTranslate()">Translate</button>
        <button class="btn btn-danger" ng-click="addBookmark()">Bookmark</button></td>
    </tr><hr>
    <tr ng-repeat="bookmarks in bookmarks">
      <td>{{bookmarks.message}}</td>
      <td>{{bookmarks.language}}</td>
      <td>{{bookmarks.result}}</td>
      <td><button class="btn btn-danger" ng-click="removeBookmark(bookmarks._id)">Remove</button></td>
    </tr>
    </tbody>
  </table>
</div>



