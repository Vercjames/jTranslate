<!DOCTYPE html>
<html>
<head>
  <meta content="text/html; charset=utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="keywords" content="Translation Application"/>
  <meta name="author" content="https://github.com/Vercjames">
  <meta name="description" content="Translation Application"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>

  <!-- jTrnslate Application || Styles -->
  <!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= -->
  <link rel="stylesheet" href='https://fonts.googleapis.com/css?family=Kaushan+Script'>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700">
  <link rel="stylesheet" href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic'>
  <link rel="stylesheet" href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700'>
  <link rel="stylesheet" type="text/css" href="Noted-Libraries/Bootstrap/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="Noted-Libraries/Template/agency.css">
  <link rel="stylesheet" type="text/css" href="Noted-Styles/Styles.css">

  <title>jTranslate</title>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular.min.js"></script>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular-route.min.js"></script>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script type="text/javascript" src="Noted-Javascript/Application.js"></script>

  <!-- jTrnslate Application || Controllers -->
  <!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= -->
  <script type="text/javascript" src="Noted-Javascript/Client-Controllers/TranslateApi.js"></script>
</head>
<body ng-app="jTranslate">
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header page-scroll">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand page-scroll" href="/">jTranslate</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-left">
        <li class="navActive"><a href='/'>Home</a></li>
        <% if(user) { %>
        <li><a href='/Profile'>profile</a></li>
        <% } %>
      </ul>

      <% if(!user) { %>
      <ul class="nav navbar-nav navbar-right">
        <li><a href='/Technologies'>Technologies</a></li>
        <li><a href='/Register'>Register</a></li>
        <li><a href='/Login'>Login</a></li>
      </ul>
      <% } %>

      <% if(user) { %>
      <ul class="nav navbar-nav navbar-right">
        <li><a href='/Technologies'>Technologies</a></li>
        <li><a href='/Logout'>Logout</a></li>
      </ul>
      <% } %>
    </div>
  </div>
</nav>

<!-- jTrnslate Application || Translation Section -->
<!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= -->
<section id="contact" ng-controller="CtrlTranslate">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <h2 style="color: white">Translate</h2>

        <form>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Enter Phrase" id="htmlPhrase" ng-model="ObjMessage.message">
          </div>
          <div class="form-group">
            <div class="form-group htmlLanguageParent">
              <select ng-init="ObjMessage.language='select'" class="form-control" id="htmlLanguage" ng-model="ObjMessage.language">
                <option value="select" style="display:none;">Select  A Language</option>
                <option value="en-ru">English to Russian</option>
                <option value="en-ja">English to Japanese</option>
                <option value="en-zh">English to Chinese</option>
                <option value="en-he">English to Hebrew</option>
                <option value="en-es">English to Spanish</option>
                <option value="en-fr">English to French</option>
                <option value="en-de">English to German</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <input type="text" class="form-control"  placeholder="Translation" id="htmlPhrase" ng-model="ObjMessage.result" readonly>
          </div>

          <button ng-click="onTranslate()" class="btn btn-warning btn-lg">Translate</button>
          <% if(!user) { %>
          <a href="login" class="btn btn-warning btn-lg" style="float: right">Login</a>
          <% } %>
        </form>
        <hr>
        <% if(!user) { %>
        <div style="color: white">Register To Bookmark | <a href="/Register"> Register</a></div>
        <% } %>

      </div>
    </div>
  </div>
</section>


<!-- jTrnslate Application || Footer -->
<!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= -->
<footer>
  <div class="container">
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4"><span class="copyright">
        <a href="https://github.com/Vercjames/jTranslate">Open Source - jTranslate</a></span></div>
      <div class="col-md-4"></div>
    </div>
  </div>
</footer>

<!-- jTrnslate Application || Closing Scripts -->
<!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= -->
<script type="text/javascript" src="Noted-Libraries/Bootstrap/bootstrap.min.js"></script>
<script type="text/javascript" src="Noted-Libraries/Template/agency.js"></script>
</body>
</html>

